<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

   <bean id="newsOverview" class="org.sakaiproject.component.app.help.model.ResourceBean">
      <property name="docId"><value>arcf_zh_CN</value></property>
      <property name="name"><value>新闻总览</value></property>
      <property name="location"><value>/sakai_news/arcf_zh_CN.html</value></property>
      <property name="defaultForTool"><value>sakai.news</value></property>
   </bean>
   
   <bean id="setupNews" class="org.sakaiproject.component.app.help.model.ResourceBean">
      <property name="docId"><value>areh_zh_CN</value></property>
      <property name="name"><value>添加/编辑/删除新闻</value></property>
      <property name="location"><value>/sakai_news/areh_zh_CN.html</value></property>
   </bean>
    
       <bean id="viewNewsFeed" class="org.sakaiproject.component.app.help.model.ResourceBean">
      <property name="docId"><value>arak_zh_CN</value></property>
      <property name="name"><value>查看新闻源地址</value></property>
      <property name="location"><value>/sakai_news/arak_zh_CN.html</value></property>
   </bean>
   
    <bean id="org.sakaiproject.api.app.help.TableOfContents" 
          class="org.sakaiproject.component.app.help.model.TableOfContentsBean">
      <property name="name"><value>根</value></property>
      <property name="categories">
         <list>
            <bean id="newsCategory" class="org.sakaiproject.component.app.help.model.CategoryBean">
               <property name="name"><value>新闻</value></property>
               <property name="resources">
                  <list>
                     <ref bean="newsOverview"/>
					 <ref bean="setupNews"/>
                     <ref bean="viewNewsFeed"/>
                  </list>
               </property>
            </bean>
           </list>
         </property>
       </bean>
</beans>
